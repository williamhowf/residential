@model GrcAnnouncementsModel
<div class="panel-group">
    @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_grcannouncement_details_info_top", additionalData = Model.Id })
    <div class="panel panel-default">
		<div class="panel-body">
			<div class="form-group">
				<div class="col-md-3">
					<nop-label asp-for="Title_CN" />
				</div>
				<div class="col-md-9">
					<nop-editor asp-for="Title_CN" asp-required="true" />
					<span asp-validation-for="Title_CN"></span>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-3">
					<nop-label asp-for="ShortDescription_CN" />
				</div>
				<div class="col-md-9">
					<nop-editor asp-for="ShortDescription_CN" asp-required="true" />
					<span asp-validation-for="ShortDescription_CN"></span>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-3">
					<nop-label asp-for="Content1_CN" />
				</div>
				<div class="col-md-9">
					<div class="input-group input-group-required">
						<nop-editor asp-for="Content1_CN" asp-template="RichEditor" />
						<div class="input-group-btn">
							<nop-required />
						</div>
					</div>
					<span asp-validation-for="Content1_CN"></span>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-3">
					<nop-label asp-for="Content2_CN" />
				</div>
				<div class="col-md-9">
					<nop-editor asp-for="Content2_CN" asp-required="false" />
					<span asp-validation-for="Content2_CN"></span>
				</div>
			</div>
		</div>
    </div>
    @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_grcannouncement_details_info_bottom", additionalData = Model.Id })
</div>
