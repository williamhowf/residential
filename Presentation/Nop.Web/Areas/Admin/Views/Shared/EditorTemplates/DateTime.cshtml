@if (isReadOnly == false)
{
    <input id="@Html.IdForModel()" name="@Html.NameForModel()" value="@((Model > DateTime.MinValue ? Model : DateTime.Today).ToString(dateTimeFormat))" disabled="disabled" />
    <script type="text/javascript">
    $(document).ready(function () {
        $("#@Html.IdForModel()").kendoDateTimePicker({
            popup: {
                position: "bottom right",
                origin: "top right"
            },
            format: "@dateTimeFormat"
        });
    });
    </script>
}
else if (isReadOnly == true)
{
    <input id="@Html.IdForModel()" name="@Html.NameForModel()" value="@((Model > DateTime.MinValue ? Model : DateTime.Today).ToString(dateTimeFormat))" />
    <script type="text/javascript">
    $(document).ready(function () {
        $("#@Html.IdForModel()").kendoDateTimePicker({
            popup: {
                position: "bottom right",
                origin: "top right"
            },
            format: "@dateTimeFormat"
        });
    });
    </script>
}
