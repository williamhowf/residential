@model IncidentsModel

<div class="panel-group">
    @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_incident_details_info_top", additionalData = Model.Id })
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Title" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="Title" asp-required="true" />
                    <span asp-validation-for="Title"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Desc" />
                </div>
                <div class="col-md-9">
                    <div class="input-group input-group-required">
                        <nop-textarea asp-for="Desc" />
                        <div class="input-group-btn">
                            <nop-required />
                        </div>
                    </div>
                    <span asp-validation-for="Desc"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Inc_DateTime" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="Inc_DateTime" />
                    <span asp-validation-for="Inc_DateTime"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Status" />
                </div>
                <div class="col-md-2">
                    <nop-select asp-for="Status" asp-items="Model.StatusValue" />
                    <span asp-validation-for="Status"></span>
                </div>
            </div>

            @*<div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Category" />
                </div>
                <div class="col-md-2">
                    <nop-select asp-for="Category" asp-items="Model.CategoryValue" />
                    <span asp-validation-for="Category"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Type" />
                </div>
                <div class="col-md-2">
                    <nop-select asp-for="Type" asp-items="Model.TypeValue" />
                    <span asp-validation-for="Type"></span>
                </div>
            </div>*@
        </div>
    </div>
    @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_incident_details_info_bottom", additionalData = Model.Id })
</div>
