@model SecurityQuestionViewModel


@{
    //page title
    ViewBag.Title = T("Admin.Configuration.SecurityQuestions").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Security Question Management System");
}

<form asp-controller="Security" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Configuration.SecurityQuestions.AddNew")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Configuration.SecurityQuestions.Added.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">

            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = "admin_security_question_buttons" })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>